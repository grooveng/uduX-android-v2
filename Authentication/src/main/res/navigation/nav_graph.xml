<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/newUserDetailsFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="ng.groove.authentication.CreateAccountEmailFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_create_account_email">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="ng.groove.authentication.SecondFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>
    <fragment
        android:id="@+id/newUserDetailsFragment"
        android:name="ng.groove.authentication.NewUserDetailsFragment"
        android:label="fragment_new_user_details"
        tools:layout="@layout/fragment_new_user_details" />
</navigation>